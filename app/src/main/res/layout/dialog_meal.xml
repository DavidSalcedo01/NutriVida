<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_container">

        <ImageButton
            android:id="@+id/btn_goBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/arrow_back_white"
            android:contentDescription="Regresar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="220dp"
            android:orientation="vertical"
            android:background="@drawable/white_container">


            <TextView
                android:id="@+id/lb_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandwich de \njamon de pavo"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                style="@style/PoppinsText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                style="@style/PoppinsText"/>

            <TextView
                android:id="@+id/lb_dialog_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Echo por una excelente conbinacion entre los mejores vegetales que pueden ayudarte a regular tus procesos estomacales y reducir tu ingensta de calorias "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:paddingRight="10dp"
                style="@style/PoppinsText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                style="@style/PoppinsText"/>

            <TextView
                android:id="@+id/lb_dialog_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lechuga, Pepino, tomate, cebolla, atun"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                style="@style/PoppinsText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macros"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                style="@style/PoppinsText"/>

            <TextView
                android:id="@+id/lb_dialog_macros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorias: 89KCAL\nCarbohidratos: 30g\nProteina: 29g\nGrasas: 6g"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                style="@style/PoppinsText"/>

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Agregar"
                style="@style/PoppinsText"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_meal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-150dp"
            android:layout_marginStart="145dp"
            android:src="@drawable/salad"
            android:layout_gravity="center" />



    </FrameLayout>
</FrameLayout>